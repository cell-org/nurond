<html>
<head>
<link href="/css/all.min.css" rel="stylesheet">
<link href="/style.css" rel="stylesheet">
<script src="/navlinks.js"></script>
</head>
<body>
<nav>
<div class='navbar'>
  <a class='brand' href="/"><img class='mini' src="/nuron.png"></a>
  <div class='flexible'></div>
  <div><%=name%></div>
  <a href="/settings"><i class="fa-solid fa-gear"></i></a>
</div>
<div class='navlinks'></div>
</nav>
<main>
<div class='list'>
<% chains.forEach((chain) => { %>
  <div class='item'>
    <a class='brand' href="/wallets/<%=chain.chainId%>"><%=chain.name%> (<%=chain.chain%>)</a>
    <div>chainId: <%=chain.chainId%></div>
    <div>wallet path: m'/44'/<%=chain.slip44%>'/0'/0/</div>
  </div>
<% }) %>
</div>
</main>
<script>
const links = navlinks(location.pathname)
document.querySelector(".navlinks").innerHTML = links
</script>
</body>
</html>
